<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports 
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="commande_template" pageWidth="595" pageHeight="842" 
              columnWidth="555" leftMargin="20" rightMargin="20" 
              topMargin="20" bottomMargin="20">

    <parameter name="numeroCommande" class="java.lang.String"/>
    <parameter name="dateCommande" class="java.time.LocalDateTime"/>
    <parameter name="dateLivraisonPrevue" class="java.time.LocalDateTime"/>
    <parameter name="fournisseurNom" class="java.lang.String"/>
    <parameter name="fournisseurAdresse" class="java.lang.String"/>
    <parameter name="montantTotal" class="java.math.BigDecimal"/>
    <parameter name="observations" class="java.lang.String"/>
    <parameter name="statut" class="java.lang.String"/>
    <parameter name="lignesCommande" class="net.sf.jasperreports.engine.JRDataSource"/>
    <parameter name="SUBREPORT_DIR" class="net.sf.jasperreports.engine.JasperReport"/>

    <title>
        <band height="120">
            <!-- Header avec fond coloré -->
            <rectangle>
                <reportElement x="0" y="0" width="555" height="80" backcolor="#2E86AB"/>
                <graphicElement>
                    <pen lineWidth="0"/>
                </graphicElement>
            </rectangle>
            
            <!-- Titre principal -->
            <staticText>
                <reportElement x="20" y="15" width="300" height="25" forecolor="#FFFFFF"/>
                <textElement verticalAlignment="Middle">
                    <font fontName="Arial" size="20" isBold="true"/>
                </textElement>
                <text><![CDATA[BON DE COMMANDE]]></text>
            </staticText>
            
            <!-- Logo ou nom entreprise -->
            <staticText>
                <reportElement x="20" y="45" width="200" height="20" forecolor="#FFFFFF"/>
                <textElement verticalAlignment="Middle">
                    <font fontName="Arial" size="12"/>
                </textElement>
                <text><![CDATA[POINT VENTE SAAS]]></text>
            </staticText>
            
            <!-- Numéro de commande avec style -->
            <rectangle>
                <reportElement x="380" y="10" width="160" height="30" backcolor="#F8F9FA"/>
                <graphicElement>
                    <pen lineWidth="1" lineColor="#DEE2E6"/>
                </graphicElement>
            </rectangle>
            <staticText>
                <reportElement x="385" y="15" width="60" height="20"/>
                <textElement verticalAlignment="Middle">
                    <font fontName="Arial" size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[N° Commande:]]></text>
            </staticText>
            <textField>
                <reportElement x="450" y="15" width="85" height="20"/>
                <textElement verticalAlignment="Middle">
                    <font fontName="Arial" size="10" isBold="true" />
                </textElement>
                <textFieldExpression><![CDATA[$P{numeroCommande}]]></textFieldExpression>
            </textField>
            
            <!-- Date avec style -->
            <rectangle>
                <reportElement x="380" y="45" width="160" height="25" backcolor="#F8F9FA"/>
                <graphicElement>
                    <pen lineWidth="1" lineColor="#DEE2E6"/>
                </graphicElement>
            </rectangle>
            <staticText>
                <reportElement x="385" y="50" width="40" height="15"/>
                <textElement verticalAlignment="Middle">
                    <font fontName="Arial" size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Date:]]></text>
            </staticText>
            <textField pattern="dd/MM/yyyy HH:mm">
                <reportElement x="430" y="50" width="105" height="15"/>
                <textElement verticalAlignment="Middle">
                    <font fontName="Arial" size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{dateCommande}]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <pageHeader>
        <band height="120">
            <!-- Section Fournisseur -->
            <rectangle>
                <reportElement x="0" y="10" width="270" height="100" backcolor="#F8F9FA"/>
                <graphicElement>
                    <pen lineWidth="1" lineColor="#DEE2E6"/>
                </graphicElement>
            </rectangle>
            <staticText>
                <reportElement x="10" y="20" width="80" height="20" backcolor="#E9ECEF"/>
                <textElement verticalAlignment="Middle">
                    <font fontName="Arial" size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[FOURNISSEUR]]></text>
            </staticText>
            <textField>
                <reportElement x="10" y="45" width="250" height="20"/>
                <textElement verticalAlignment="Middle">
                    <font fontName="Arial" size="11" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{fournisseurNom}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="10" y="70" width="250" height="30"/>
                <textElement>
                    <font fontName="Arial" size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{fournisseurAdresse}]]></textFieldExpression>
            </textField>
            
            <!-- Section Livraison -->
            <rectangle>
                <reportElement x="285" y="10" width="270" height="100" backcolor="#F8F9FA"/>
                <graphicElement>
                    <pen lineWidth="1" lineColor="#DEE2E6"/>
                </graphicElement>
            </rectangle>
            <staticText>
                <reportElement x="295" y="20" width="100" height="20" backcolor="#E9ECEF"/>
                <textElement verticalAlignment="Middle">
                    <font fontName="Arial" size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[LIVRAISON]]></text>
            </staticText>
            <staticText>
                <reportElement x="295" y="45" width="80" height="15"/>
                <textElement verticalAlignment="Middle">
                    <font fontName="Arial" size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Date prévue:]]></text>
            </staticText>
            <textField pattern="dd/MM/yyyy" isBlankWhenNull="true">
                <reportElement x="380" y="45" width="170" height="15"/>
                <textElement verticalAlignment="Middle">
                    <font fontName="Arial" size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{dateLivraisonPrevue}]]></textFieldExpression>
            </textField>
            <staticText>
                <reportElement x="295" y="65" width="50" height="15"/>
                <textElement verticalAlignment="Middle">
                    <font fontName="Arial" size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Statut:]]></text>
            </staticText>
            <textField>
                <reportElement x="350" y="65" width="200" height="15"/>
                <textElement verticalAlignment="Middle">
                    <font fontName="Arial" size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{statut}]]></textFieldExpression>
            </textField>
        </band>
    </pageHeader>

    <columnHeader>
        <band height="40">
            <!-- En-tête du tableau -->
            <rectangle>
                <reportElement x="0" y="10" width="555" height="25" backcolor="#2E86AB"/>
                <graphicElement>
                    <pen lineWidth="0"/>
                </graphicElement>
            </rectangle>
            <staticText>
                <reportElement x="10" y="15" width="80" height="15" forecolor="#FFFFFF"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="Arial" size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[RÉFÉRENCE]]></text>
            </staticText>
            <staticText>
                <reportElement x="100" y="15" width="200" height="15" forecolor="#FFFFFF"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="Arial" size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[DESCRIPTION]]></text>
            </staticText>
            <staticText>
                <reportElement x="310" y="15" width="60" height="15" forecolor="#FFFFFF"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="Arial" size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[QUANTITÉ]]></text>
            </staticText>
            <staticText>
                <reportElement x="380" y="15" width="80" height="15" forecolor="#FFFFFF"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="Arial" size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[PRIX UNIT.]]></text>
            </staticText>
            <staticText>
                <reportElement x="470" y="15" width="80" height="15" forecolor="#FFFFFF"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="Arial" size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[MONTANT]]></text>
            </staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="200">
            <subreport>
                <reportElement x="0" y="0" width="555" height="200"/>
                <dataSourceExpression><![CDATA[$P{lignesCommande}]]></dataSourceExpression>
                <subreportExpression><![CDATA[$P{SUBREPORT_DIR}]]></subreportExpression>
            </subreport>
        </band>
    </detail>

    <summary>
        <band height="120">
            <!-- Ligne de séparation -->
            <line>
                <reportElement x="0" y="10" width="555" height="1"/>
                <graphicElement>
                    <pen lineWidth="2" lineColor="#2E86AB"/>
                </graphicElement>
            </line>
            
            <!-- Section Observations -->
            <staticText>
                <reportElement x="0" y="25" width="80" height="15"/>
                <textElement verticalAlignment="Middle">
                    <font fontName="Arial" size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Observations:]]></text>
            </staticText>
            <textField isBlankWhenNull="true">
                <reportElement x="85" y="25" width="300" height="30"/>
                <textElement>
                    <font fontName="Arial" size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{observations}]]></textFieldExpression>
            </textField>
            
            <!-- Total avec style -->
            <rectangle>
                <reportElement x="400" y="20" width="155" height="35" backcolor="#2E86AB"/>
                <graphicElement>
                    <pen lineWidth="0"/>
                </graphicElement>
            </rectangle>
            <staticText>
                <reportElement x="410" y="25" width="60" height="25" forecolor="#FFFFFF"/>
                <textElement textAlignment="Left" verticalAlignment="Middle">
                    <font fontName="Arial" size="14" isBold="true"/>
                </textElement>
                <text><![CDATA[TOTAL:]]></text>
            </staticText>
            <textField pattern="#,##0.00">
                <reportElement x="470" y="25" width="80" height="25" forecolor="#FFFFFF"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font fontName="Arial" size="14" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{montantTotal} + " DH"]]></textFieldExpression>
            </textField>
            
            <!-- Footer -->
            <staticText>
                <reportElement x="0" y="80" width="555" height="15"/>
                <textElement textAlignment="Center">
                    <font fontName="Arial" size="8" isItalic="true"/>
                </textElement>
                <text><![CDATA[Document généré automatiquement - Point Vente SaaS]]></text>
            </staticText>
        </band>
    </summary>
</jasperReport>